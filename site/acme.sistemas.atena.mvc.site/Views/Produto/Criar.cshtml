@model acme.atena.application.Handler.Produtos.Commands.Request.InputProdutoCommand

@{
    IEnumerable<SelectListItem> tipoProdutos = ViewBag.DropDownTipoProduto;
    ViewData["Title"] = "Criar";
}

<h1>Cadastrar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Validade" class="control-label"></label>
                <input asp-for="Validade" class="form-control" />
                <span asp-validation-for="Validade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoProdutoId" class="control-label"></label>
                <select asp-for="TipoProdutoId" class="form-control" id="tipo_categoria" asp-items="@tipoProdutos">
                    <option value="" selected></option>
                </select>
                <span asp-validation-for="TipoProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

